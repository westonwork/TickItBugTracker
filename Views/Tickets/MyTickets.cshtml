@* Whole Page *@
<div class="d-flex">
    @* Nav *@
    <div class="col-3 d-flex flex-column flex-shrink-0 p-3 mt-3 shadow" style="width: 280px; background-color:white;">
        <img src="~/imgs/LogoH1NoBg.png" alt="Horizontal Logo">
        <a href="/dashboard" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"></a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto sideNavHeight">
            <li class="nav-item">
                <a href="/dashboard" class="nav-link link-dark" aria-current="page">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#home"></use>
                    </svg>
                    Home
                </a>
            </li>
            <li>
                <a href="/tickets" class="nav-link link-dark">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#table"></use>
                    </svg>
                    All Tickets
                </a>
            </li>
            <li>
                <a href="/tickets/my" class="nav-link active link-dark">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#people-circle"></use>
                    </svg>
                    My Tickets
                </a>
            </li>
            <li>
                <a href="tickets/new" class="nav-link link-dark">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#grid"></use>
                    </svg>
                    Add A Ticket
                </a>
            </li>
            <li>
                <a href="/tickets/complete" class="nav-link link-dark">
                    <svg class="bi me-2" width="16" height="16">
                        <use xlink:href="#award"></use>
                    </svg>
                    Completed Tickets
                </a>
            </li>
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center link-dark text-decoration-none dropdown-toggle" id="dropdownUser2"
                data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/imgs/IndexBgGradient.jpg" alt="" width="32" height="32" class="rounded-circle me-2">
                <strong>@Context.Session.GetString("FirstName") @Context.Session.GetString("LastName")</strong>
            </a>
            <ul class="dropdown-menu text-small text-center shadow" aria-labelledby="dropdownUser2">
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li>
                    <form asp-action="logout" asp-controller="Home" method="post">
                        <input type="submit" value="Logout" class="dropdown-item">
                    </form>
                </li>
            </ul>
        </div>
    </div>
    @* Content *@
    @* <div class="col-8 mt-5"> *@
    <table class="m-3 table table-dark table-striped table-hover text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Project</th>
                <th>Priority Level</th>
                <th>Due Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Ticket t in Model)
            {
                Assign? IsAssigned = t.ListofAssignmentsForThisTickets.FirstOrDefault(a => a.UserId == Context.Session.GetInt32("UserId"));
                <tr>
                        @if(t.UserId == Context.Session.GetInt32("UserId"))
                        {
                            <td>@t.Name</td>
                            <td>@t.Project</td>
                            <td>@t.Priority</td>
                            <td>@t.DueDate.ToShortDateString()</td>
                            <td>
                                @* POST // UnAssign This Ticket Button and DELETE from List of Ticket Assigns *@
                                <a href="/tickets/@t.TicketId" class="btn btn-light mb-2">view</a>
                                @* A // Edit This Ticket from the List of Tickets *@
                                <a href="/tickets/@t.TicketId/edit" class="btn btn-primary mb-2">edit</a>
                                @* POST // Delete This Ticket from the List of Tickets *@
                                <form asp-action="DestroyTicket" asp-controller="Tickets" asp-route-ticketId="@t.TicketId" method="post">
                                    <input type="submit" value="mark complete" class="btn btn-success">
                                </form>
                            </td>
                        }
                </tr>
                }
        </tbody>
    </table>
</div>