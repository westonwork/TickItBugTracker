@model User
<h2 class="border-bottom pb-2 mb-3 text-dark display-6">Register</h2>
<form asp-action="CreateUser" asp-controller="Users" method="post">
    @* First Name *@
    <div class="mb-3 text-secondary">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    @* Last Name *@
    <div class="mb-3 text-secondary">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    @* Email *@
    <div class="mb-3 text-secondary">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    @* Password *@
    <div class="mb-3 text-secondary">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <small>Password must be at least 8 characters</small>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @* Confirm Password *@
    <div class="mb-3 text-secondary">
        <label asp-for="Confirm"></label>
        <input asp-for="Confirm" class="form-control">
        <span asp-validation-for="Confirm" class="text-danger"></span>
    </div>
    @* Submit *@
    <div class="mb-3">
        <button type="submit" class="btn btn-dark text-light form-control">REGISTER</button>
    </div>
</form>